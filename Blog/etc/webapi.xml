<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/post/getById/:id" method="GET">
        <service class="Emakina\Blog\Api\Post" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/post/getAll" method="GET">
        <service class="Emakina\Blog\Api\Post" method="getAll"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>